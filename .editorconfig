# .editorconfig (Google Java Style-ish defaults)
# EditorConfig helps keep formatting consistent across IDEs/editors.
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 100

# IntelliJ/IDEA files (optional niceties)
[*.{xml,gradle,groovy,kts,yml,yaml,md,json}]
indent_style = space
indent_size = 2
tab_width = 2

[*.properties]
indent_style = space
indent_size = 2
tab_width = 2

[*.sh]
indent_style = space
indent_size = 2
tab_width = 2
